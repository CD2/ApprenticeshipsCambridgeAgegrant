= content_for :actions do
  = link_to 'Export CSV', url_for(format: 'csv')
  
.typography
  %h1 Grant Detail Applicants

  %table.index_table
    %thead
      %tr
        %td Forename
        %td Surname
        %td Email
        %td Applied

        %td{colspan: 1}
    %tbody
      - GrantDetail.includes(:user).all.each do |grant_detail|
        %tr
          %td= grant_detail.user.forename
          %td= grant_detail.user.surname
          %td= grant_detail.user.email
          %td= "#{time_ago_in_words(grant_detail.created_at)} ago"
          %td= link_to 'View Details', [:admin, grant_detail]
