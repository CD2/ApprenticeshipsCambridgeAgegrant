#pre_content
  .typography

    %h1 ADMIN LOGIN

.searchform
  .typography
    = form_for :session, url: admin_login_path do |f|
      - if flash.any?
        %p#MemberLoginForm_LoginForm_error.message.bad
          - flash.each do |k, v|
            = v
      .field
        = f.label :email
        = f.email_field :email, placeholder: "Email"
      .field
        = f.label :password
        = f.password_field :password, placeholder: "Password"
      .actions
        = link_to "Forgot password?", new_password_reset_path
        = f.submit "Log in"
