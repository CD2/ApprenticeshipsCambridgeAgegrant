%head
  %title ApprenticeshipsNorfolk
  = csrf_meta_tags
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
%body
  #header

    #header_extras
      = link_to 'Members Log in', 'https://www.apprenticeshipsnorfolk.org/members'

      #social_icons
        %ul
          %li
            = link_to '', 'https://twitter.com/AppsNorfolk'
          %li
            = link_to '', 'https://www.facebook.com/Apprenticeships-Norfolk-Network-1449750935329671/'
          %li
            = link_to '', 'https://www.youtube.com/user/NorfolkEmployability'
          %li
            = link_to '', 'https://www.flickr.com/photos/apprenticeships'

    = image_tag 'https://www.apprenticeshipsnorfolk.org/themes/an/images/logo-720.png'

    #header_navigation      
      %ul
        %li 
          = link_to 'Employ An Apprentice', 'https://www.apprenticeshipsnorfolk.org/employ-an-apprentice/search-for-an-apprentice/' 
        %li 
          = link_to 'Become An Apprentice', 'https://www.apprenticeshipsnorfolk.org/become-an-apprentice/search-for-an-apprenticeship/'
        %li 
          = link_to 'Contact Us', 'https://www.apprenticeshipsnorfolk.org/contact-us/'
        %li 
          = link_to 'Apprentice Blog', 'https://www.apprenticeshipsnorfolk.org/blog/'
        %li
          = link_to 'AGE Grant', new_grant_details_path
          
  #content
    #sidebar_wrapper
      #sidebar_inner
        #sidebar_links
          %ul
            - Page.all.each do |page|
              %li= link_to page.name, page, class: @page == page  ? 'active' : ''

             

      #sidebar_contact
        #sidebar_orange_box
          %h1 Don't see what you want?
          %h2 Call 0344 800 8024
          = link_to 'Enquiry Form >', '#'

        = image_tag 'https://www.apprenticeshipsnorfolk.org/assets/aside/_resampled/CroppedFocusedImage280210-aside-1.jpg'

    #page_wrapper
      #page_wrapper_menu
        %ul
          %li
            = link_to 'Home', 'https://www.apprenticeshipsnorfolk.org/'
          %li
            = link_to 'AGE Grant', new_grant_details_path
          %li
            = link_to @page.name, @page, class: 'current_page'

      = yield